<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<!-- extension of detail form -->
        <record id="view_partner_form_inherited1" model="ir.ui.view">
            <field name="name">res.partner.form.inherited1</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='sales_purchases']/group" position="inside">
                	<group>
			            <field name="eq_delivery_date_type_sale"/>
			            <field name="eq_delivery_date_type_purchase"/>
                	</group>
                </xpath>
          </field>
        </record>

        <!-- extension of treeview --> 
         <record id="view_partner_tree_inherited1" model="ir.ui.view">
            <field name="name">view.partner.tree.inherited1</field>
            <field name="model">res.partner</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
            	<field name="display_name" position="replace">
                     <field name="eq_complete_description"/>
                 </field>
          </field>
        </record>
        
        <!-- extension of kanban --> 
        <record id="view_partner_kanban_inherited1" model="ir.ui.view">
            <field name="name">view.partner.kanban.inherited1</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="arch" type="xml">
            	<xpath expr="//div[@class='oe_kanban_details']/strong" position="replace">
            		<h4 class="oe_partner_heading">
						<a data-type="open" href="#" class=" oe_kanban_action oe_kanban_action_a">
						<t t-if="parent_id == True">
							<field name="parent_id"/>
							<br/>
						</t>
						<field name="eq_complete_description"/></a>
					</h4>
                </xpath>
          </field>
        </record>
                
        <!-- add 2 new fields -->
	 	<record id="eq_view_partner_form_inherit_hofm" model="ir.ui.view">
            <field name="name">eq.res.partner.form.inherit_hofm</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']//field[@name='supplier']" position="after">
				<field name="eq_prospective_customer"/>
				<field name="eq_unlocked_for_webshop"/>               
			</xpath>
            </field>
        </record>
        
        <record id="base.view_partner_tree" model="ir.ui.view">
            <field name="name">res.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree string="Contacts">
                    <field name="name"/>
                    <field name="function" invisible="1"/>                    
            		<field name="display_name" invisible="True"/>
					<field name="is_company" invisible="1"/>                    
					<field name="type" attrs="{'invisible': [('is_company','=',True)]}"></field>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="user_id" invisible="1"/>
                    <!-- <field name="country" invisible="1"/> In der v8 RC1 nicht mehr vorhanden/Not present in v8 RC1 -->
                    <field name="country_id" invisible="1"/>
                    <field name="parent_id" invisible="1"/>
                </tree>
            </field>
        </record>
        
         <record id="view_partner_form_inherited1" model="ir.ui.view">
            <field name="name">res.partner.form.inherited1</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
             <xpath expr="//t[@t-name='kanban-box']//div[contains(@class, 'oe_kanban_details')]/div[@t-if='record.fax.raw_value']" position="after">
                    <div t-if="record.type.raw_value">Type: <field name="type"/></div>
             </xpath>
          </field>
        </record>
        
         <record id="view_partner_form" model="ir.ui.view">
            <field name="name">base.view_partner_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <field name="ref" position="replace">
                    <field name="ref" attrs="{'invisible':True}" colspan="3"/>
                </field>
                <field name="category_id" position="before">
                    <label for="eq_customer_ref" string="Customer Number" attrs="{'invisible':[('customer', '=', False)]}"/>
                    <div attrs="{'invisible':[('customer', '=', False)]}" it="eq_customer_ref">
                        <field name="eq_customer_ref" attrs="{'invisible':[('customer', '=', False)]}" class="oe_inline" on_change="on_change_customer_ref(eq_customer_ref)"/>
                        <button name="eq_customer_update" string="Update" type="object" attrs="{'invisible':[('customer', '=', False)]}" class="oe_edit_only oe_link oe_inline"/>
                    </div>
                    <label for="eq_creditor_ref" attrs="{'invisible':[('supplier', '=', False)]}" />
                    <div attrs="{'invisible':[('supplier', '=', False)]}" it="eq_creditor_ref">
                        <field name="eq_creditor_ref" attrs="{'invisible':[('supplier', '=', False)]}" colspan="3" class="oe_inline"/>
                        <button name="eq_creditor_update" string="Update" type="object"  attrs="{'invisible':[('supplier', '=', False)]}"  colspan="1" class="oe_edit_only oe_link oe_inline"/>
                    </div>
                </field>
            </field>
        </record>
        
         <record id="eq_foreign_ref_partner_extension_form" model="ir.ui.view">
            <field name="name">eq.foreign.ref.partner.extension.form</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">                              
                <field name="email" position="after">
                	<field name="eq_foreign_ref"/>
                </field>
			</field>
		</record>
		
