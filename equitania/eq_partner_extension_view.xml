<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="eq_partner_extension_form_view" model="ir.ui.view">
            <field name="name">eq_partner_extension.form</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='title']" position="replace"/>
                <xpath expr="//field[@name='title']" position="replace"/>
                <xpath expr="//div[@class='oe_title oe_left']/h1" position="before">
                	<field name="title" placeholder="Titel" attrs="{'invisible': ['|', ('type', '!=', 'contact'), ('is_company', '=', True)]}"/>                	
                </xpath>
                <xpath expr="//field[@name='name']" position="replace">              	
                    <field name="eq_firstname" placeholder="Firstname" attrs="{'invisible': ['|', ('type', '!=', 'contact'), ('is_company', '=', True)]}"/>
                    <field name="name" style="width: 100%%;" placeholder="Name"/>
					<field name="eq_name2" style="width: 100%%;" placeholder="Name2"/>
                </xpath>
                <xpath expr="//field[@name='type']" position="replace">
                    <field name="type"/>
                </xpath>
                <xpath expr="//field[@name='website']" position="after">
                    <field name="eq_birthday" attrs="{'invisible': ['|', ('type', '!=', 'contact'), ('is_company', '=', True)]}"/>
                </xpath>
                <xpath expr="//field[@name='child_ids']/form/sheet/div/label[@for='name']" position="replace"/>
                <xpath expr="//field[@name='child_ids']/form/sheet/div/h1" position="replace">
					<div class="oe_edit_only">
						<label for="title"/> (
						<field name="is_company" on_change="onchange_type(is_company)" class="oe_inline"/> <label for="is_company" string="Is a Company?"/>)
					</div>
                	<h2>
	                	<field name="title" placeholder="Titel" attrs="{'invisible': [('is_company', '=', True)]}"/>
	                    <field name="eq_firstname" placeholder="Firstname" attrs="{'invisible': [('type', '!=', 'contact')]}"/>
	                    <field name="name" placeholder="Name"/>
	                    <field name="eq_name2" placeholder="Name2"/>
                    </h2>
                </xpath>
                <xpath expr="//field[@name='child_ids']/form/sheet/group" position="replace">
					<group>
					    <field name="function" attrs="{'invisible': [('type', '=', 'pobox')]}" placeholder="e.g. Sales Director"/>
					    <field name="email" attrs="{'invisible': [('type', '=', 'pobox')]}"/>
					    <field name="phone" attrs="{'invisible': [('type', '=', 'pobox')]}"/>
					    <field name="mobile" attrs="{'invisible': [('type', '=', 'pobox')]}"/>
					</group>
                </xpath>
                <xpath expr="//field[@name='child_ids']/form/sheet/group/field[@name='mobile']" position="after" >
                    <field name="eq_birthday" attrs="{'invisible': [('type', '!=', 'contact')]}"/>
                </xpath>
                <xpath expr="//field[@name='child_ids']/kanban/templates/t[@t-name='kanban-box']/div/div/div[@class='oe_module_desc']/div/table/tr/td/h4/a[@type='open']" position="replace">
                	<a type="open"><field name="title"/> <field name="eq_firstname"/> <field name="name"/></a>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="after">
                	<field name="eq_incoterm"/>
                	<field name="eq_deliver_condition_id"/>
                </xpath>
                <!-- New Address -->
				<field name="country_id" position="replace"/>
				<field name="street" position="replace">
                    <field name="street" style="width: 80%%" placeholder="Street..."  attrs="{'readonly': [('use_parent_address','=',True)]}"/>
					<field name="eq_house_no" style="width: 20%%" placeholder="House no"  attrs="{'readonly': [('use_parent_address','=',True)]}"/>
				</field>
				<div class="address_format" position="replace">
					<field name="zip" placeholder="ZIP" style="width: 102px" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
	                <div>
	                    <field name="city" placeholder="City" style="width: 50%%" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
	                    <field name="eq_citypart" placeholder="Disctrict" style="width: 50%%" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                        <field name="country_id" placeholder="Country" style="width: 50%%" options='{"no_open": True, "no_create": True}' attrs="{'readonly': [('use_parent_address','=',True)]}"/>
	                    <field name="state_id" class="oe_no_button" placeholder="State" style="width: 50%%" options='{"no_open": True}' on_change="onchange_state(state_id)" attrs="{'readonly': [('use_parent_address','=',True)]}"/>		
					</div>
				</div>
                <!-- New Address Child Form -->
                <xpath expr="//field[@name='child_ids']/form/sheet/group/div/field[@name='country_id']" position="replace"/>
                <xpath expr="//field[@name='child_ids']/form/sheet/group/div/field[@name='street']" position="replace">
                    <field name="street" style="width: 80%%" placeholder="Street..."/>
					<field name="eq_house_no" style="width: 20%%" placeholder="House no"/>
                </xpath>
                <xpath expr="//field[@name='child_ids']/form/sheet/group/div/div[@class='address_format']" position="replace">
					<field name="zip" placeholder="ZIP" style="width: 102px"/>
	                <div attrs="{'invisible': [('use_parent_address','=', True)]}">
	                    <field name="city" placeholder="City" style="width: 50%%"/>
	                    <field name="eq_citypart" placeholder="Disctrict" style="width: 50%%"/>
                        <field name="country_id" placeholder="Country" style="width: 50%%" options='{"no_open": True, "no_create": True}'/>
	                    <field name="state_id" class="oe_no_button" placeholder="State" style="width: 50%%" options='{"no_open": True}' on_change="onchange_state(state_id)"/>		
					</div>
                </xpath>
				<!-- Header -->
				<div class="oe_title oe_left" position="attributes">
					<attribute name="class">oe_left</attribute>
					<attribute name="style">width: 50%</attribute>
				</div>
            </field>
        </record>
        
        <record id="eq_partner_extension_property_form_view" model="ir.ui.view">
            <field name="name">eq_partner_extension.form</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='sales_purchases']" position="inside">
                	<h3>
                		<label for="id" string="Default Address"/>
                	</h3>
                	<group>
                		<field name="eq_default_delivery_address" domain="[('parent_id', '=', active_id)]"/>
                		<field name="eq_default_invoice_address" domain="[('parent_id', '=', active_id)]"/>
                	</group>
                </xpath>
            </field>
        </record>
        
        <record id="eq_partner_extension_sale_stock_form_view" model="ir.ui.view">
            <field name="name">eq_partner_extension.sale_stock.form</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit"/>
            <field name="arch" type="xml">
            	<field name="incoterm" position="after">
            		<field name="eq_deliver_condition_id"/>
            	</field>
            	<field name="partner_id">
					<field name="partner_id" on_change="onchange_partner_id(partner_id, context)" domain="[('customer','=',True)]" context="{'search_default_customer':1, 'show_address': 1}" options='{"always_reload": True}'/>
            	</field>
            </field>
        </record>
        
        <record id="view_sale_config_settings" model="ir.ui.view">
            <field name="name">eq_partner_extension.base.config.settings</field>
            <field name="model">base.config.settings</field>
            <field name="inherit_id" ref="base_setup.view_general_configuration"/>
            <field name="arch" type="xml">
            	<form position="inside">
                    <group>
                        <label for="id" string="Partner"/>
                        <div>
                            <div>
                                <field name="default_creator_saleperson"/>
                                <label for="default_creator_saleperson"/>
                            </div>
                        </div>
                    </group>
            	</form>
            </field>
        </record>
        
        <!-- Partner Tree -->
    	<record id="eq_inox_compatibility_partner_tree_view" model="ir.ui.view">
            <field name="name">eq_ibf.view_partner_tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree" />
            <field name="arch" type="xml">
            <field name="name" position="after">
            	<field name="street"/>
            	<field name="city"/>
            </field>
            </field>    
        </record>
    </data>
</openerp>