<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Stock Config Settings --> 
		<record id="eq_purchase_config_settings" model="ir.ui.view">
		     <field name="name">eq_purchase_config_settings</field>
		     <field name="model">purchase.config.settings</field>
		     <field name="inherit_id" ref="purchase.view_purchase_configuration"/>
		     <field name="arch" type="xml">
             	<field name="group_manage_vendor_price" position="after">
                	<field name="default_eq_filter_prod_sup" class="oe_inline"/>
                	<field name="default_show_delivery_date"/>
                	<field name="default_use_calendar_week"/>
        		</field>
		     </field>
		</record>
		
        <!-- Stock Config Settings -->
		<record id="eq_stock_config_settings" model="ir.ui.view">
		     <field name="name">eq_stock_config_settings</field>
		     <field name="model">stock.config.settings</field>
		     <field name="inherit_id" ref="stock.view_stock_config_settings"/>
		     <field name="arch" type="xml">
                <field name="module_procurement_jit" position="before">
                    <div>
                        <field name="default_eq_join_stock_moves"/>
                        <label for="default_eq_join_stock_moves"/>
                    </div>
                    <div>
                        <field name="module_eq_info_for_product_product"/>
                        <label for="module_eq_info_for_product_product"/>
                    </div>
				</field>
			
               <xpath expr="//group[@name='shipping']" position="after">
					<group string="Product Number Generator" name="Product Number Generator"/>
                        <div>
                            <div>
	                        	<field name="default_eq_min_prefix_count" class="oe_inline"/>
	                            <label for="default_eq_min_prefix_count"/>
                           </div>
                            <div>
	                            <field name="default_eq_max_prefix_count" class="oe_inline"/>
	                            <label for="default_eq_max_prefix_count"/>
                            </div>
                            <div>
	                            <field name="default_eq_prod_num_lenght" class="oe_inline"/>
	                            <label for="default_eq_prod_num_lenght"/>
                            </div>
                            <div>
	                            <field name="default_eq_seperator" class="oe_inline"/>
	                            <label for="default_eq_seperator"/>
							</div>
						</div>
				</xpath>
		     </field>
		</record>
		
		<!-- Sale Config Settings -->
		 <record id="eq_view_sale_config_settings_show_address" model="ir.ui.view">
            <field name="name">crm settings</field>
            <field name="model">sale.config.settings</field>
            <field name="inherit_id" ref="sale.view_sales_config"/>
            <field name="arch" type="xml">
                <data>
                <xpath expr="//group[@id='sale']/field[@name='group_sale_delivery_address']" position="after">
		                    <field name="default_show_address" class="oe_inline"/>
		                    <field name="default_search_only_company" class="oe_inline"/>
	                        <field name="group_product_rrp"/>
	                        <field name="default_use_sales_person_as_contact"/>
               				<field name="default_eq_use_internal_description"/>
							<field name="default_show_delivery_date"/>
						 	<field name="default_use_calendar_week"/>
		            </xpath>
                </data>
            </field>
        </record>
        
        <record id="eq_view_sale_config_settings_saleperson" model="ir.ui.view">
            <field name="name">eq_partner_extension.base.config.settings</field>
            <field name="model">base.config.settings</field>
            <field name="inherit_id" ref="base_setup.view_general_configuration"/>
            <field name="arch" type="xml">
            	<form position="inside">
                    <group>
                        <label for="id" string="Partner"/>
                        <div>
                            <div>
                                <field name="default_creator_saleperson"/>
                                <label for="default_creator_saleperson"/>
                            </div>
                        </div>
                    </group>
            	</form>
            </field>
        </record>
    </data>
</openerp>