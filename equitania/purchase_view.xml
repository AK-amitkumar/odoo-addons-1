<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
	    <!--  extension of purchase order page -->
        <record id="view_purchase_order_form_address_extension" model="ir.ui.view">
            <field name="name">purchase.order.form.address.extension</field>
            <field name="model">purchase.order</field>
	    	<field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
            <!-- 
                <field name="partner_id" position="attributes">
					<attribute name="context">{'search_default_supplier':1, 'default_supplier':1, 'default_customer':0, 'show_address': 1,'main_address': True ,'active_model':'purchase.order',}</attribute>
                </field>
                -->
                <!-- deactivate default version of address fields -->
		    	
                <!-- append address infos -->
                <xpath expr="//field[@name='partner_id']" position="after">                 
               		<field name="eq_street_house_no" attrs="{'invisible': [('eq_street_house_no', '=', False)]}" />
               		<field name="eq_zip_city" attrs="{'invisible': [('eq_zip_city', '=', False)]}" />
               		<field name="eq_country" attrs="{'invisible': [('eq_country', '=', False)]}" />               	             	
            	</xpath>            	
            </field>
	    </record>
    </data>
</openerp>
