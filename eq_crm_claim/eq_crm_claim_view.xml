<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
		<record model="ir.ui.view" id="eq_crm_case_claims_tree_view">
            <field name="name">CRM - Claims Tree</field>
            <field name="model">crm.claim</field>
            
            
            <field name="inherit_id" ref="crm_claim.crm_case_claims_tree_view"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="ref" />
                    <field name="eq_costs" />
                </field>
            </field>

        </record>
        
        
        <record model="ir.ui.view" id="eq_crm_case_claims_form_view">
            <field name="name">CRM - Claims Form</field>
            <field name="model">crm.claim</field>
            
            
            <field name="inherit_id" ref="crm_claim.crm_case_claims_form_view"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="eq_costs" />
                    <div>
                    <field name="eq_good_parts" />
                    <field name="eq_waste_parts" />
                    </div>
                </field>
                <field name="categ_id" position="after">
                    <field name="sub_categ_id" options="{'no_create': True, 'no_open': True}" domain="[('object_id.model', '=', 'crm.claim')]" />
                </field>
            </field>

        </record>
	
	</data>
</openerp>


