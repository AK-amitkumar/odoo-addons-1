<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="style_plain">
			<style type="text/css">
				div.addressmargin div.returnaddress {
				background-color:green!important; visibility:hidden;}

				.returnaddressplain {
				font-size:5.5pt;
				text-decoration: underline;
				margin-bottom:0.2cm;
				background-color: yellow;
				width: 35%; height:20px; position: fixed; margin-top: 20px;
				}
			</style>
		</template>


		<template id="layout" inherit_id="report.layout" primary="True">
			<xpath expr="//head" position="inside">
				<t t-call="eq_plain_reports.style_plain" />
			</xpath>
		</template>

		<template id="html_container_plain" inherit_id="report.html_container">
			<xpath expr="." position="inside">
				<t t-call="eq_plain_reports.layout">
					<t t-raw="0" />
				</t>
			</xpath>
		</template>
	</data>
</openerp>